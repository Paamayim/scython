    password = options["pass"]
    password = `echo -n ${password} | iconv -t utf16le | openssl md4` >>= "(stdin)= %s"
    password = password[0]

    # write out wpa_supplicant.conf
    print "adding config for %s, hash %s..." % (options["user"], password)
    conf = """
